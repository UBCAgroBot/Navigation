<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="my_robot">
    <static>false</static>

    <!-- ================= DRIVING, STEERING, IMU ================= -->
    <plugin
      filename="libignition-gazebo-diff-drive-system.so"
      name="ignition::gazebo::systems::DiffDrive">
    
      <left_joint>joint_rl</left_joint>
      <right_joint>joint_rr</right_joint>
    
      <wheel_separation>0.35</wheel_separation>
      <wheel_radius>0.16</wheel_radius>
    
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>

    <plugin
      filename="ignition-gazebo-joint-position-controller-system"
      name="ignition::gazebo::systems::JointPositionController">
      <joint_name>joint_fl_steer</joint_name>
      <topic>/steer_fl</topic>
      <p_gain>100</p_gain>
      <i_gain>0.1</i_gain>
      <d_gain>1.0</d_gain>
    </plugin>
    
    <plugin
      filename="ignition-gazebo-joint-position-controller-system"
      name="ignition::gazebo::systems::JointPositionController">
      <joint_name>joint_fr_steer</joint_name>
      <topic>/steer_fr</topic>
      <p_gain>100</p_gain>
      <i_gain>0.1</i_gain>
      <d_gain>1.0</d_gain>
    </plugin>

    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"/>

    <!-- ================= BASE ================= -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>136.0</mass>
        <inertia>
          <ixx>0.2</ixx>
          <iyy>0.2</iyy>
          <izz>0.2</izz>
        </inertia>
      </inertial>

      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.95084 0.400 0.37214</size>
          </box>
        </geometry>
      </collision>

      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.95084 0.400 0.37214</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.8 1</ambient>
          <diffuse>0.2 0.2 0.8 1</diffuse>
        </material>
      </visual>

      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <topic>/imu</topic>
      </sensor>
    </link>

    <!-- ================= STEERING KNUCKLES ================= -->
    <link name="steering_fl"/>
    <link name="steering_fr"/>

    <!-- ================= LIDAR ================= -->
    <link name="lidar_link">
      <pose>0.50 0 0.05 0 0 0</pose>

      <visual name="lidar_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>

      <sensor name="gpu_lidar" type="gpu_lidar">
        <frame_id>lidar_link</frame_id>
        <topic>/scan</topic>
        <update_rate>10</update_rate>

        <ray>
          <scan>
            <horizontal>
              <samples>192</samples>
              <min_angle>-1.0472</min_angle>
              <max_angle>1.0472</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>75.0</max>
          </range>
        </ray>

        <visualize>true</visualize>
      </sensor>
    </link>

    <!-- ================= WHEELS ================= -->
    <link name="wheel_fl">
      <pose>0.45 0.175 -0.136 0 1.5708 1.5708</pose>
      <inertial><mass>0.2</mass></inertial>
      <collision name="collision">
        <geometry><cylinder><radius>0.16</radius><length>0.1016</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.16</radius><length>0.1016</length></cylinder></geometry>
      </visual>
    </link>

    <link name="wheel_fr">
      <pose>0.45 -0.175 -0.136 0 1.5708 1.5708</pose>
      <inertial><mass>0.2</mass></inertial>
      <collision name="collision">
        <geometry><cylinder><radius>0.16</radius><length>0.1016</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.16</radius><length>0.1016</length></cylinder></geometry>
      </visual>
    </link>

    <link name="wheel_rl">
      <pose>-0.45 0.175 -0.136 0 1.5708 1.5708</pose>
      <inertial><mass>0.2</mass></inertial>
      <collision name="collision">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </visual>
    </link>

    <link name="wheel_rr">
      <pose>-0.45 -0.175 -0.136 0 1.5708 1.5708</pose>
      <inertial><mass>0.2</mass></inertial>
      <collision name="collision">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </visual>
    </link>

    <!-- ================= JOINTS ================= -->

    <!-- Steering joints -->
    <joint name="joint_fl_steer" type="revolute">
      <pose>0.45 0.175 -0.136 0 0 0</pose>
      <gravity>false</gravity>
      <parent>base_link</parent>
      <child>steering_fl</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <joint name="joint_fr_steer" type="revolute">
      <pose>0.45 -0.175 -0.136 0 0 0</pose>
      <gravity>false</gravity>
      <parent>base_link</parent>
      <child>steering_fr</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <!-- Front wheel roll -->
    <joint name="joint_fl" type="revolute">
      <parent>steering_fl</parent>
      <child>wheel_fl</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <joint name="joint_fr" type="revolute">
      <parent>steering_fr</parent>
      <child>wheel_fr</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <!-- Rear wheel roll -->
    <joint name="joint_rl" type="revolute">
      <parent>base_link</parent>
      <child>wheel_rl</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <joint name="joint_rr" type="revolute">
      <parent>base_link</parent>
      <child>wheel_rr</child>
      <axis><xyz>0 0 1</xyz></axis>
    </joint>

    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>lidar_link</child>
    </joint>

  </model>
</sdf>

