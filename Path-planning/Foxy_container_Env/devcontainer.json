{
    "name": "ROS 2 Foxy Python Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python"
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/vscode/ros2_ws,type=bind,consistency=cached"
    ],
    "remoteUser": "root",
    "postCreateCommand": "source /opt/ros/foxy/setup.bash"
}
