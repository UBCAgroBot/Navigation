<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="my_robot">
    <static>false</static>

    <plugin
      filename="libignition-gazebo-diff-drive-system.so"
      name="ignition::gazebo::systems::DiffDrive">
    
      <left_joint>joint_rl</left_joint>
      <right_joint>joint_rr</right_joint>
    
      <wheel_separation>0.35</wheel_separation>
      <wheel_radius>0.16</wheel_radius>
    
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>

    <!--
    <plugin filename="gz-sim-ackermann-steering-system" name="gz::sim::systems::AckermannSteering">
      <left_joint>joint_rl</left_joint>
      <right_joint>joint_rr</right_joint>
      <left_joint>joint_fl</left_joint>
      <left_joint>joint_fr</left_joint>
      <left_steering_joint>joint_fl</left_steering_joint>
      <right_steering_joint>joint_fr</right_steering_joint>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>    
      <topic>/cmd_vel</topic>
      <wheel_separation>0.35</wheel_separation>
      <wheel_radius>0.16</wheel_radius>
      <wheel_base>0.58</wheel_base>
    </plugin>
    -->
    
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"></plugin>

    <!-- MAIN BODY -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>136.0</mass>
        <inertia>
          <ixx>0.2</ixx> <iyy>0.2</iyy> <izz>0.2</izz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.95084 0.400 0.37214</size>
          </box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.95084 0.400 0.37214</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.8 1</ambient>
          <diffuse>0.2 0.2 0.8 1</diffuse>
        </material>
      </visual>

    <sensor name="imu_sensor" type="imu">
        <always_on>1</always_on>
        <update_rate>100</update_rate>
        <visualize>true</visualize>
        <topic>/imu</topic>
        <!-- Additional sensor parameters can go here, e.g., noise models -->
    </sensor>
    </link>

    <link name="lidar_link">
      <!-- Positioned forward and above the chassis (EXTERIOR) -->
      <!-- base_link top â‰ˆ 0.4 + 0.32029 = 0.72029 -->
      <pose>0.50 0 0.05 0 0 0</pose>
    
      <visual name="lidar_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>
    
      <sensor name="gpu_lidar" type="gpu_lidar">
        <pose>0 0 0 0 0 0</pose>
    
        <!-- REQUIRED -->
        <frame_id>lidar_link</frame_id>
        <topic>/scan</topic>
    
        <update_rate>10</update_rate>
    
        <ray>
          <scan>
            <horizontal>
              <samples>192</samples>
              <resolution>1</resolution>
              <min_angle>-1.0472</min_angle>
              <max_angle>1.0472</max_angle>
            </horizontal>
            <vertical>
              <samples>1</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>0</max_angle>
            </vertical>
          </scan>
    
          <range>
            <min>0.1</min>
            <max>75.0</max>
            <resolution>0.01</resolution>
          </range>
    
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
    
        <always_on>true</always_on>
        <visualize>true</visualize>
      </sensor>
    </link>

    <!-- WHEELS -->
    <link name="wheel_fl">
      <pose>0.45 0.175 -0.136 0 1.5708 1.5708</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx> <iyy>0.001</iyy> <izz>0.001</izz>
</inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.16</radius><length>0.1016</length></cylinder>
        </geometry>
        </collision>
      <visual name="visual">
        <geometry>
          <cylinder><radius>0.16</radius><length>0.1016</length></cylinder>
        </geometry>
      </visual>
    </link>

    <link name="wheel_fr">
      <pose>0.45 -0.175 -0.136 0 1.5708 1.5708</pose>
       <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx> <iyy>0.001</iyy> <izz>0.001</izz>
</inertia>
      </inertial>
     <collision name="collision">
        <geometry><cylinder><radius>0.16</radius><length>0.1016</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.16</radius><length>0.1016</length></cylinder></geometry>
      </visual>
    </link>

    <link name="wheel_rl">
      <pose>-0.45 0.175 -0.136 0 1.5708 1.5708</pose>
        <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx> <iyy>0.001</iyy> <izz>0.001</izz>
</inertia>
      </inertial>
    <collision name="collision">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </visual>
    </link>

    <link name="wheel_rr">
      <pose>-0.45 -0.175 -0.136 0 1.5708 1.5708</pose>
         <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx> <iyy>0.001</iyy> <izz>0.001</izz>
</inertia>
      </inertial>
   <collision name="collision">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </collision>
      <visual name="visual">
        <geometry><cylinder><radius>0.165</radius><length>0.102</length></cylinder></geometry>
      </visual>
    </link>

    <!-- JOINTS -->
    <joint name="joint_fl" type="revolute">
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
      <parent>base_link</parent>
      <child>wheel_fl</child>
    </joint>

	<joint name="joint_fr" type="revolute">
      <axis>
         <xyz>0 0 1</xyz>
      </axis>
      <parent>base_link</parent>
      <child>wheel_fr</child>
    </joint>

    <joint name="joint_rl" type="revolute">
      <axis>
         <xyz>0 0 1</xyz>
      </axis>
      <parent>base_link</parent>
      <child>wheel_rl</child>
    </joint>

    <joint name="joint_rr" type="revolute">
       <axis>
         <xyz>0 0 1</xyz>
      </axis>
      <parent>base_link</parent>
      <child>wheel_rr</child>
    </joint>

    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>lidar_link</child>
    </joint>
  </model>
</sdf>



